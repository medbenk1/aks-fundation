{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "westeurope",
            "metadata": {
                "description": "Specify a location for the resources."
            }
        },
        "main.deploymentName": {
            "type": "string",
            "defaultValue": "[uniqueString(resourceGroup().id)]",
            "metadata": {
                "description": "deploymentName"
            }
        },
        "main.linkedNetwork.bastionSubnetId": {
            "type": "string",
            "metadata": {
                "description": "bastion Subnet Name"
            }
        }
    },
    "variables": {
        "linkedBastion.bastionPublicIpAddressName": "[concat(parameters('main.deploymentName'),'-PubIP1')]",
        "linkedBastion.bastionPublicIpAddressId": "[resourceId('Microsoft.Network/publicIPAddresses', variables('linkedBastion.bastionPublicIpAddressName'))]",
        "linkedBastion.bastionHostName": "[concat(parameters('main.deploymentName'),'-bastion1')]"

    },
    "resources": [
        {
            "apiVersion": "2020-05-01",
            "type": "Microsoft.Network/publicIPAddresses",
            "name": "[variables('linkedBastion.bastionPublicIpAddressName')]",
            "location": "[parameters('location')]",
            "sku": {
                "name": "Standard"
            },
            "properties": {
                "publicIPAllocationMethod": "Static"
            }
        },
        {
            "apiVersion": "2020-11-01",
            "type": "Microsoft.Network/bastionHosts",
            "name": "[variables('linkedBastion.bastionHostName')]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[variables('linkedBastion.bastionPublicIpAddressId')]"
            ],
            "sku": {
                "name": "Standard"
            },
            "properties": {
                "enableFileCopy": true,
                "enableIpConnect": true,
                "enableShareableLink": true,
                "enableTunneling": true,
                "ipConfigurations": [
                    {
                        "name": "IpConf",
                        "properties": {
                            "subnet": {
                                "id": "[parameters('main.linkedNetwork.bastionSubnetId')]"
                            },
                            "publicIPAddress": {
                                "id": "[variables('linkedBastion.bastionPublicIpAddressId')]"
                            }
                        }
                    }
                ]
            }
        }
    ],
    "outputs": {}
}