{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "deploymentName": {
            "type": "string",
            "defaultValue": "[uniqueString(deployment().name)]",
            "metadata": {
                "description": "Global deployment name"
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location for all resources."
            }
        }
    },
    "variables": {

    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "name": "[concat(deployment().name,'linkedNetwork')]",
            "properties": {

                "mode": "Incremental",
                "templateLink": {
                    "relativePath": "nested/linkedNetwork.json"
                },
                "parameters": {
                    "location": {
                        "value": "[parameters('location')]"
                    },
                    "main.deploymentName": {
                        "value": "[parameters('deploymentName')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "name": "[concat(deployment().name,'linkedBastion')]",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', concat(deployment().name,'linkedNetwork'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "relativePath": "nested/linkedBastion.json"
                },
                "parameters": {
                    "location": {
                        "value": "[parameters('location')]"
                    },
                    "main.deploymentName": {
                        "value": "[parameters('deploymentName')]"
                    },
                    "main.linkedNetwork.vnetID": {
                        "value": "[reference(concat(deployment().name,'linkedNetwork'),'2021-04-01').outputs.toMainlinkedNetworkvnetID.value]"
                    },
                    "main.linkedNetwork.bastionSubnetID": {
                        "value": "[reference(concat(deployment().name,'linkedNetwork'),'2021-04-01').outputs.toMainlinkedNetworkbastionSubnetID.value]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "name": "[concat(deployment().name,'linkedLogAnalytics')]",
            "properties": {
                "expressionEvaluationOptions": {
                    "scope": "inner"
                },
                "mode": "Incremental",
                "templateLink": {
                    "relativePath": "nested/linkedLogAnalytics.json"
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "name": "[concat(deployment().name,'linkedManagedIdentity')]",
            "properties": {
                "expressionEvaluationOptions": {
                    "scope": "inner"
                },
                "mode": "Incremental",
                "templateLink": {
                    "relativePath": "nested/linkedManagedIdentity.json"
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "name": "[concat(deployment().name,'linkedAksCluster')]",
            "properties": {
                "expressionEvaluationOptions": {
                    "scope": "inner"
                },
                "mode": "Incremental",
                "templateLink": {
                    "relativePath": "nested/linkedAKSCluster.json"
                }
            }
        }

    ],
    "outputs": {
    }
}